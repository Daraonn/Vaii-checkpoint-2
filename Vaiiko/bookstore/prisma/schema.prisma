
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id   Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String    @unique
  createdAt DateTime  @default(now())
  isAdmin   Boolean   @default(false)

  favouriteBooks FavouriteBook[]
}


model Book {
  book_id   Int     @id @default(autoincrement())
  name      String
  price     Int
  author    String
  ISBN      String  @unique
  image     String?
  

  favouritedBy   FavouriteBook[]
}


model FavouriteBook {
  book_id   Int
  user_id   Int

  user      User @relation(fields: [user_id], references: [user_id])
  book      Book @relation(fields: [book_id], references: [book_id])

  @@id([user_id, book_id])
}